<script type="text/javascript">
	document.write("Hello");
</script>

<script type="text/javascript">
    // 실행순서 : head => body => jQeury 
	// jquery 사용방법:
	// $(document).ready(function() {
			// jQuery 문법 : 기본은 자바스크립트
			// $("selector").action() ;
		    // selector = 선택자
		    //  0. *       => 모든 요소
		    //  1. this    => 현재진행중인 요소 (for문이나 객체에 많이 사용)
		    //  2. element => 태그
		    //  3. #       => 아이디
		    //  4. .(점)   => 클래스
		    //  5. :first  => 첫번째 요소
		    //  6. :first-child => 첫번째 자식요소
		    //  7. :[속성]
		    
		    // action() => 자바스크립트의 function()과 같이 동작(기능)을 의미
	// });  
    
    // 방법2
    $(function() {
		// hide() => 숨기는 액션
		// "p" element 숨기기
		// $("p").hide();
		
		// 아이디가 p1인 element만 숨기기
    	// $("#p1").hide();
		
		// 클래스가 p2인 element만 숨기기
    	// $(".p2").hide();
		  
		// 모든 요소 숨기기
    	// $("*").hide();
		
		// 버튼태그를 누르면 function 실행
		
		$("button").click(function() {
			$("#p1").hide();
		});
		
		// 아이디가 btn인 요소를 누르면 클래스 p2 가 사라진다.
		$("#btn").click(function() {
			$(".p2").hide();
		});
		
		$("#btn2").click(function() {
			$(this).hide();
		});
		
	});
</script>
</head>
<body>
	<h2> jQuery Syntax </h2>
